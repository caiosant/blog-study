<%= form_with(model: post) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
  </div>

    <%= form.submit class: 'btn btn-primary mt-3 me-2', diable_with: 'Criando...' %>
    <% unless current_page?(new_post_path) %> 
      <%= link_to 'Show', @post, class: 'btn btn-primary mt-3 me-2' %>
    <% end %>
    <%= link_to 'Back', posts_path, class: 'btn btn-primary mt-3' %>

<% end %>
